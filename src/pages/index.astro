---
import FirstView from "@/components/FirstView.astro";
import Heading02 from "@/components/Heading02.astro";
import Heading03 from "@/components/Heading03.astro";
import LinkList from "@/components/LinkList.astro";
import Section from "@/components/Section.astro";
import SkillSet from "@/components/SkillSet.astro";
import Width from "@/components/Width.astro";
import Layout from "@/layouts/Layout.astro";
---

<Layout>
	<FirstView />

	<Width>
		<Section type="h2">
			<Heading02 class="">Link</Heading02>
			<LinkList
				linkList={[
					{
						text: "GitHub",
						href: "https://github.com/daizabro",
					},
					{ text: "X", href: "#" },
					{ text: "Instagram", href: "#" },
					{ text: "しずかなインターネット", href: "#" },
					{ text: "Zenn", href: "#" },
					{ text: "YouTube", href: "#" },
					{
						text: "note",
						href: "https://note.com/dai_zabzab",
					},
				]}
			/>
		</Section>

		<Section type="h2">
			<Heading02>Skill Set</Heading02>
			<p>
				<small>※ あくまで個人的な判断での指標となります。</small>
			</p>

			<Section type="h3">
				<Heading03>Base Skill</Heading03>
				<SkillSet
					skillList={[
						{
							title: "HTML",
							description: "HTMLの熟練度",
							proficiency: 90,
						},
						{
							title: "CSS",
							description: "CSSの熟練度",
							proficiency: 80,
						},
						{
							title: "JavaScript（TypeScript）",
							description: "JavaScript（TypeScript）の熟練度",
							proficiency: 70,
						},
					]}
				/>
			</Section>

			<Section type="h3">
				<Heading03>Frame Work</Heading03>
				<SkillSet
					skillList={[
						{
							title: "Astro",
							description: "Astroの熟練度",
							proficiency: 90,
						},
						{
							title: "React",
							description: "Reactの熟練度",
							proficiency: 80,
						},
						{
							title: "Vue",
							description: "Vueの熟練度",
							proficiency: 70,
						},
						{
							title: "Svelte",
							description: "Svelteの熟練度",
							proficiency: 70,
						},
					]}
				/>
			</Section>
		</Section>
	</Width>
</Layout>
